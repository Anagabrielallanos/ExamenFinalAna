
@{
    ViewBag.Title = "Crear";
}

<h2>Crear Gasto </h2>

<form action="/GastoTarj/Crear" method="post">

    <div class="form-group">
        <label>Monto</label>
        <input id="Monto"  type="text" class="form-control" name="Monto" placeholder="Monto">
        @Html.ValidationMessage("Monto")
    </div>

    <div class="form-group">
        <label>Fecha</label>
        <input id="Fecha" type="date" class="form-control" name="Fecha" placeholder="Fehca">
        @Html.ValidationMessage("Fecha")
    </div>

    <div class="form-group">
        <label>Descripcion</label>
        <input id="Descripcion" type="text" class="form-control" name="Descripcion" placeholder="Descripcion">
        @Html.ValidationMessage("Descripcion")
    </div>

    <div class="form-group">
        <label>TARJETA EN LA QUE SE AGREGARA  EL GASTO </label>
        <select id="TarjetaId" name="DatosId" class="form-control">
            @foreach (var d in ViewBag.Cuenta)
            {
                <option value="@d.IdDatos">@d.Nombre</option>
            }
        </select>
    </div>

    <button id="Guardar" class="btn btn-primary">Guardar</button>

</form>

